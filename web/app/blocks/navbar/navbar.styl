.navbar
  width 100%
  background-color #ececec

.nav
  margin 0 auto
  padding .4rem 0
  text-align center

  li
    margin 0 1rem
    padding .2rem 0
    display inline-block

    @media (max-width: 767px)
      float left

    button
      padding 0
      font-size .85rem

      &:hover
        border-bottom .05rem solid

    a
      padding .4rem 0
      font-size .85rem
      text-decoration none

      @media (max-width: 767px)
        font-size .9rem

      &:hover
        border-bottom .05rem solid
